<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".vk">
    <Button
        android:id="@+id/buttonBarChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Среднее количество времени проводящим пользователем в день"/>

    <Button
        android:id="@+id/buttonBarChart18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дневная аудитория в России"/>
    <Button
        android:id="@+id/buttonBarChart2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Месячная аудитория в России"/>



</LinearLayout>