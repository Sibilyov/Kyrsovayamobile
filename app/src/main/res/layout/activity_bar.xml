<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".bar">

    <Button
        android:id="@+id/buttonPieChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2015"/>

    <Button
        android:id="@+id/buttonPieChart2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016"/>
    <Button
        android:id="@+id/buttonPieChart3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2017"/>

    <Button
        android:id="@+id/buttonPieChart4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2018"/>

    <Button
        android:id="@+id/buttonPieChart5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2019"/>
    <Button
        android:id="@+id/buttonPieChart6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2020"/>
    <Button
        android:id="@+id/buttonPieChart7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2021"/>


</LinearLayout>